@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group" align="center">
                    <button type="submit" align="center" style="background-color: #7189FF; width: 80%; color: #FFFF; font-weight: bold; " class="btn btn-primary" >Log in</button>
                </div>
                <div class="form-group">
                    <p align="center">
                        <a id="forgot-password" asp-page="./ForgotPassword"><span style="color: #253274; font-weight: bold; ">Forgot your password?</span></a>
                    </p>
                    <p align="center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><span style="color: #253274; font-weight: bold; ">Need An Account?</span> <span style="color: #7189FF; font-weight: bold; ">Sign Up</span> </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
