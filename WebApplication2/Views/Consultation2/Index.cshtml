@model IEnumerable<WebApplication2.Models.Consultation2>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<style>
    .button {
        background-color: #0a95ff;
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }
</style>

<h1>List of consultations </h1>
@if (User.Identity.IsAuthenticated)
{

    <p>
        <a class="button" asp-action="Create">Create New Consultations</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.patient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hospital.nameHospital)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.doctor.medecinName)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID"><i class="material-icons">&#xE254;</i></a>
                        <a asp-action="Details" asp-route-id="@item.ID"><i class="material-icons">remove_red_eye</i></a>
                        <a asp-action="Delete" asp-route-id="@item.ID"><i class="material-icons">&#xE872;</i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
