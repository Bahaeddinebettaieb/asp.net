@model WebApplication2.Models.Consultation2

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Create Consultation</h4>
<hr />
<div class="row" align="center">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="date" class="control-label"></label>
                        <input asp-for="date" class="form-control" />
                        <span asp-validation-for="date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="patient" class="control-label"></label>
                        <input asp-for="patient" class="form-control" />
                        <span asp-validation-for="patient" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="HospitalId" class="control-label"></label>
                        <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.HospitalId"></select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="control-label"></label>
                        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                    </div>
                </div>
            </div>

            
            <div class="form-group">
                <input type="submit" value="Create" style="width: 80%;" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="previous">&laquo; Previous</a>
</div>

