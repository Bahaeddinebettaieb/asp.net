@model WebApplication2.Models.Rea

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Edit Rea</h4>
<hr />
<div class="row" align="center">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="rea" class="control-label"></label>
                        <input asp-for="rea" class="form-control" />
                        <span asp-validation-for="rea" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="numberBed" class="control-label"></label>
                        <input asp-for="numberBed" class="form-control" />
                        <span asp-validation-for="numberBed" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="HospitalId" class="control-label"></label>
                <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.HospitalId"></select>
                <span asp-validation-for="HospitalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" style="width: 80%;" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="previous">&laquo; Previous</a>
</div>

